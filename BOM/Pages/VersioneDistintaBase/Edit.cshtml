@page "{id:int}"
@model BOM.Pages.VersioneDistintaBase.EditModel

<h1>Edit</h1>

@if (Model == null)
{
    <p class="text-danger">⚠️ Errore: il modello è null.</p>
    return;
}

ViewData["Title"] = "Edit";

@if (Model != null)
{
    ViewData["Title"] = "Edit";

    <h4>@Model.VersioneDistintaBase.Product.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VersioneDistintaBase.Id" />
                <div class="form-group">

                    <label asp-for="VersioneDistintaBase.Version" class="control-label"></label>
                    <input asp-for="VersioneDistintaBase.Version" class="form-control" />
                    <span asp-validation-for="VersioneDistintaBase.Version" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="VersioneDistintaBase.CreationTime" class="control-label"></label>
                    <input asp-for="VersioneDistintaBase.CreationTime" class="form-control" />
                    <span asp-validation-for="VersioneDistintaBase.CreationTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <p class="text-danger">⚠️ Errore: Nessun dato trovato per questa versione.</p>
}